<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- 🟦 추천 카드 뷰 -->
    <LinearLayout
        android:id="@+id/recommendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 추천 메뉴 제목 -->
        <TextView
            android:id="@+id/recommendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 넙죽메뉴"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- 추천 메뉴 이미지 (정방형 + rounded_corner_mask 적용) -->
        <ImageView
            android:id="@+id/recommendImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner_mask" />

        <!-- 추천 메뉴 별점 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/star1"
                android:src="@drawable/gray_star2"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/star2"
                android:src="@drawable/gray_star2"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/star3"
                android:src="@drawable/gray_star2"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/star4"
                android:src="@drawable/gray_star2"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:id="@+id/star5"
                android:src="@drawable/gray_star2"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>

        <!-- 레시피 태그 -->
        <TextView
            android:id="@+id/recommendTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#아보카도 #새우 #토스트"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

    <!-- 🟫 레시피 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/recommendContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
